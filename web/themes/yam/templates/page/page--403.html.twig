{% set content %}
  {% set link %}
    {% include 'yam:knob' with {
      attributes: create_attribute(),
      arrow: true,
      is_button: true,
      text: 'Zurück zur Startseite',
      url: '/',
    } %}
  {% endset %}
  {% include 'yam:mood' with {
    full: true,
    title: 'Sie haben keine Zugriffsberechtigung für diese Seite.',
    body: link,
  } %}
{% endset %}

{% include 'yam:sheet' with {
  attributes: create_attribute(),
  sheet_header_top: page.header_top,
  sheet_header_left: page.header_left,
  sheet_header_menu: page.header_menu,
  sheet_header_icons: page.header_icons,
  sheet_header_button: page.header_button,
  content: content,
  sheet_footer_top: page.footer_top,
  sheet_footer_middle: page.footer_middle,
  sheet_footer_bottom: page.footer_bottom,
} %}
